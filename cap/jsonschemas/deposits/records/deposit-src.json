{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Deposit",
    "type": "object",
    "properties": {
        "_deposit": {
            "type": "object",
            "name": "_deposit",
            "properties": {
                "id": {
                    "type": "integer",
                    "name": "id"
                },
                "pid": {
                    "type": "object",
                    "name": "pid",
                    "properties": {
                        "revision_id": {
                            "type": "integer"
                        },
                        "type": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                "created_by": {
                    "type": "integer",
                    "name": "created_by"
                },
                "owners": {
                    "type": "array",
                    "name": "owners",
                    "items": [
                        {
                            "type": "integer"
                        }
                    ]
                },
                "status": {
                    "type": "string",
                    "name": "status",
                    "enum": [
                        "draft",
                        "published"
                    ]
                }
            },
            "required": [
                "id"
            ]
        }
    }
}
