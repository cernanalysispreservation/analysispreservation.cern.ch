{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Describe information needed for deposit module.",
  "properties": {
    "_cap_status": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "analysis_steps": {
      "description": "Please provide information about the steps of the analysis",
      "default": [{

      }],
      "items": {
        "properties": {
          "code": {
            "default": [{

            }],
            "items": {
              "properties": {
                "lhcb_code": {
                  "title": "Application",
                  "type": "string"
                },
                "platform": {
                  "title": "Platform",
                  "type": "string"
                },
                "user_code": {
                  "properties": {
                    "description": {
                      "title": "Description",
                      "type": "string"
                    },
                    "instructions": {
                      "title": "Instructions",
                      "type": "string"
                    },
                    "url": {
                      "title": "URL",
                      "type": "string"
                    }
                  },
                  "title": "User code",
                  "type": "object"
                }
              },
              "type": "object"
            },
            "title": "Code",
            "type": "array"
          },
          "input_data": {
            "properties": {
              "dataset": {
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "title": "Collision Data",
                "type": "array"
              },
              "mc_dataset": {
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "title": "MC Data",
                "type": "array"
              }
            },
            "title": "Input data",
            "type": "object"
          },
          "output_data": {
            "properties": {
              "dataset": {
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "title": "Collision Data",
                "type": "array"
              },
              "mc_dataset": {
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "title": "MC Data",
                "type": "array"
              }
            },
            "title": "Output Data",
            "type": "object"
          }
        },
        "title": "Analysis Step",
        "type": "object"
      },
      "title": "Analysis Steps",
      "type": "array"
    },
    "basic_info": {
      "id": "basic_info",
      "description": "Please provide some information relevant for all parts of the Analysis here",
      "properties": {
        "analysis_title": {
          "title": "Analysis Name",
          "type": "string",
          "description": "Provide a name for your analysis. This will be displayed as an analysis title when shared."
        },
        "measurement": {
          "title": "Measurement",
          "type": "string",
          "description": "Provide a name for your analysis. This will be displayed as an analysis title when shared."
        },
        "review_egroup": {
          "title": "Review eGroup",
          "type": "string"
        },
        "institutes": {
          "title": "Institutes Involved",
          "type": "string",
          "enum": [
            "IFT",
            "B_Q",
            "BDC",
            "DP",
            "CD",
            "QEE",
            "RD",
            "Charm",
            "SLB",
            "B2OC"
          ]
        },
        "keywords": {
          "id": "keywords",
          "title": "Keywords",
          "type": "string"
        },
        "analysis_proponents": {
          "title": "Proponents",
          "type": "string"
        },
        "reviewers": {
          "title": "Reviewers",
          "type": "string"
        },
        "analysis_status": {
          "enum": [
            "0 - planned / open topic",
            "1 - in preparation",
            "2 - ANA note released",
            "3 - review committee",
            "4 - collaboration review",
            "5 -",
            "6 - CONF note published",
            "7 -",
            "8 - journal review",
            "9 - PAPER published",
            "x - other"
          ],
          "type": "select",
          "title": "Status"
        },
        "analysis_status_notes": {
          "dependencies": [
            "status"
          ],
          "title": "Notes on Status",
          "type": "string"
        }
      },
      "required": [
        "analysis_title",
        "analysis_proponents",
        "reviewers"
      ],
      "title": "Basic Information",
      "type": "object"
    },
    "dst_selection": {
      "properties": {
        "code": {
          "properties": {
            "lhcb_code": {
              "title": "Application",
              "type": "string"
            },
            "platform": {
              "title": "Platform",
              "type": "string"
