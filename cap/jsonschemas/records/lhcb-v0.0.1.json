                    "title": "Instructions",
                    "type": "string"
                  },
                  "url": {
                    "title": "URL",
                    "type": "string"
                  }
                },
                "type": "object"
              },
              "title": "User code",
              "type": "array"
            }
          },
          "title": "Code",
          "type": "object"
        },
        "production_info": {
          "properties": {
            "data": {
              "items": {
                "properties": {
                  "location": {
                    "title": "Bookkeeping path",
                    "type": "string"
                  },
                  "processing_pass": {
                    "title": "Processing Pass",
                    "type": "string"
                  },
                  "reconstruction_software": {
                    "properties": {
                      "name": {
                        "title": "Name",
                        "type": "string"
                      },
                      "version": {
                        "title": "Version",
                        "type": "string"
                      }
                    },
                    "title": "Reconstruction software",
                    "type": "object"
                  },
                  "stripping_software": {
                    "properties": {
                      "name": {
                        "title": "Name",
                        "type": "string"
                      },
                      "version": {
                        "title": "Version",
                        "type": "string"
                      }
                    },
                    "title": "Stripping software",
                    "type": "object"
                  },
                  "trigger": {
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "title": "Trigger",
                    "type": "array"
                  },
                  "davinci_script": {
                    "title": "DaVinci Script",
                    "$ref": "https://analysispreservation.cern.ch/schemas/deposits/common/file-grabber-v0.0.1.json"
                  },
                  "year": {
                    "title": "Year",
                    "type": "string"
                  }
                },
                "type": "object"
              },
              "title": "Collision Data",
              "type": "array"
            },
            "mc_data": {
              "items": {
                "properties": {
                  "db_tags": {
                    "type": {
                      "enum": [
                        "DDDB",
                        "SIMCOND"
                      ],
                      "title": "Database Tags",
                      "type": "string"
                    }
                  },
                  "generator": {
                    "title": "Generator",
                    "type": "string"
                  },
                  "location": {
                    "title": "Bookkeeping path",
                    "type": "string"
                  },
                  "mc_production": {
                    "title": "Production",
                    "type": "string"
                  },
                  "reconstruction_software": {
                    "properties": {
                      "name": {
                        "title": "Name",
                        "type": "string"
                      },
                      "version": {
                        "title": "Version",
                        "type": "string"
                      }
                    },
                    "title": "Reconstruction software",
                    "type": "object"
                  },
                  "stripping_software": {
                    "properties": {
                      "name": {
                        "title": "Name",
                        "type": "string"
                      },
                      "version": {
                        "title": "Version",
                        "type": "string"
                      }
                    },
                    "title": "Stripping software",
                    "type": "object"
                  },
                  "trigger": {
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "title": "Trigger",
                    "type": "array"
                  },
                  "davinci_script": {
                    "title": "DaVinci Script",
                    "$ref": "https://analysispreservation.cern.ch/schemas/deposits/common/file-grabber-v0.0.1.json"
                  },
                  "used_tools": {
                    "title": "Used Tools",
                    "type": "string"
                  }
                },
                "type": "object"
              },
              "title": "MC Data",
              "type": "array"
            }
          },
          "title": "Production information",
          "type": "object"
        }
      },
