{
  "name": "alice-analysis",
  "version": "0.0.1",
  "fullname": "ALICE Analysis",
  "experiment": "ALICE",
  "is_indexed": true,
  "use_deposit_as_record": true,
  "deposit_schema": {
    "description": "Schema describing properties of an ALICE analysis",
    "title": "ALICE Analysis",
    "additionalProperties": false,
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "_buckets": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/buckets-v0.0.1.json"
      },
      "control_number": {
        "type": "string"
      },
      "basic_info": {
        "title": "Basic Information",
        "$id": "basic_info",
        "type": "object",
        "properties": {
          "analysis_title": {
            "type": "string",
            "title": "Analysis Title"
          },
          "description": {
            "type": "string",
            "title": "Description"
          }
        }
      },

      "_files": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/file-v0.0.1.json"
      },
      "$ana_type": {
        "type": "string"
      },
      "_experiment": {
        "type": "string"
      },
      "_fetched_from": {
        "type": "string"
      },
      "_user_edited": {
        "type": "boolean"
      },
      "_access": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/access-v0.0.1.json"
      },
      "_deposit": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/deposit-v0.0.1.json"
      },
      "$schema": {
        "type": "string"
      },
      "train_analysis": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/alice-train-analysis-v0.0.1.json"
      },
      "general_title": {
        "type": "string"
      }
    }
  },
  "deposit_mapping": {
    "settings": {
      "analysis": {
        "analyzer": {
          "default": {
            "type": "custom",
            "tokenizer": "whitespace",
            "filter": ["lowercase"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "_deposit": {
          "type": "object",
          "properties": {
            "created_by": {
              "type": "integer",
              "copy_to": "created_by"
            },
            "status": {
              "type": "text",
              "fields": {
                "keywords": {
                  "type": "keyword"
                }
              },
              "copy_to": "status"
            }
          }
        },
        "_collection": {
          "type": "object",
          "properties": {
              "fullname": {
                  "type": "keyword"
              },
              "name": {
                  "type": "keyword"
              },
              "version": {
                  "type": "keyword"
              }
          }
        },
        "_experiment": {
          "type": "text"
        },
        "_fetched_from": {
          "type": "text",
          "copy_to": "fetched_from"
        },
        "_user_edited": {
          "type": "boolean",
          "copy_to": "user_edited"
        },
        "_created": {
          "type": "date",
          "copy_to": "created"
        },
        "_updated": {
          "type": "date",
          "copy_to": "updated"
        },
        "created": {
          "type": "date"
        }
      }
    }
  },
  "deposit_options": {
    "ui:options": {
      "display": "grid",
      "size": "xlarge",
      "align": "center",
      "full": true,
      "view": {
        "vertical": true,
        "sidebarColor": "grey-5-a"
      }
    },
    "ui:order": ["basic_info", "train_analysis", "*"],
    "basic_info": {
      "description": {
        "ui:widget": "textarea"
      }
    },
    "ui:object": "tabView",
    "train_analysis": {
      "items": {
        "ui:order": [
          "train_id",
          "run_id",
          "configuration_files",
          "wagon_names",
          "dataset",
          "reference_production",
          "dataset_aod",
          "run",
          "ali_physics",
          "derived_dataset"
        ],
        "derived_dataset": {
          "ui:array": "AccordionArrayField"
        }
      },
      "ui:array": "default"
    }
  }
}
