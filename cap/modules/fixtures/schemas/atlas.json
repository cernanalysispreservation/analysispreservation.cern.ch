{
  "name": "atlas-analysis",
  "version": "0.0.1",
  "fullname": "ATLAS Analysis",
  "experiment": "ATLAS",
  "is_indexed": true,
  "use_deposit_as_record": true,
  "deposit_schema": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ATLAS Analysis",
    "type": "object",
    "description": "Schema describing properties of an ATLAS analysis",
    "properties": {
      "_buckets": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/buckets-v0.0.1.json"
      },
      "control_number": {
        "type": "string"
      },
      "input_datasets": {
        "description":
          "Datasets relevant for this analysis (including all datasets for all main and auxiliary measurements)",
        "title": "Input Data",
        "default": [{}],
        "items": {
          "$ref":
            "https://analysispreservation.cern.ch/schemas/deposits/records/atlas-dataset-v0.0.1.json"
        },
        "additionalProperties": false,
        "type": "array",
        "id": "input_datasets"
      },
      "_deposit": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/deposit-v0.0.1.json"
      },
      "_files": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/file-v0.0.1.json"
      },
      "basic_info": {
        "title": "Basic Information",
        "required": ["analysis_title", "glance_id"],
        "id": "basic_info",
        "propertyOrder": 10,
        "type": "object",
        "properties": {
          "abstract": {
            "type": "string",
            "title": "Abstract"
          },
          "people_info": {
            "items": {
              "type": "object",
              "properties": {
                "orcid": {
                  "pattern": "^[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}$",
                  "type": "string",
                  "title": "ORCID"
                },
                "name": {
                  "type": "string",
                  "title": "Name"
                },
                "email": {
                  "type": "string",
                  "title": "Email-Address",
                  "format": "email"
                }
              }
            },
            "type": "array",
            "title": "People Involved"
          },
          "glance_id": {
            "type": "string",
            "title": "Glance ID"
          },
          "analysis_title": {
            "type": "string",
            "title": "Analysis Title"
          }
        }
      },
      "$ana_type": {
        "type": "string"
      },
      "_experiment": {
        "type": "string"
      },
      "_fetched_from": {
        "type": "string"
      },
      "_user_edited": {
        "type": "boolean"
      },
      "_access": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/access-v0.0.1.json"
      },
      "workflows": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/atlas-workflows-no-circ-refs-v0.0.1.json"
      },
      "$schema": {
        "type": "string"
      },
      "general_title": {
        "type": "string"
      },
      "glance_info": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/atlas-glance-info-v0.0.1.json"
      },
      "limits": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/atlas-limits-v0.0.1.json"
      },
      "likelihoods": {
        "$ref":
          "https://analysispreservation.cern.ch/schemas/deposits/records/atlas-likelihood-v0.0.1.json"
      },
      "publications": {
        "description": "Publications related to the analysis",
        "title": "Publications",
        "items": {
          "$ref":
            "https://analysispreservation.cern.ch/schemas/deposits/records/atlas-publication-v0.0.1.json"
        },
        "additionalProperties": false,
        "type": "array",
        "id": "publications"
      }
    }
  },
  "deposit_mapping": {
    "settings": {
      "analysis": {
        "analyzer": {
          "lowercase_whitespace_analyzer": {
            "type": "custom",
            "tokenizer": "whitespace",
            "filter": ["lowercase"]
          }
        }
      }
    },
    "mappings": {
      "atlas-analysis-v0.0.1": {
        "_all": {
          "enabled": true,
          "analyzer": "lowercase_whitespace_analyzer"
        },
        "properties": {
          "_deposit": {
            "type": "object",
            "properties": {
              "created_by": {
                "type": "integer",
                "copy_to": "created_by"
              },
              "status": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword"
                  }
                },
                "copy_to": "status"
              }
            }
          },
          "_experiment": {
            "type": "text"
          },
          "_fetched_from": {
            "type": "text",
            "copy_to": "fetched_from"
          },
          "_user_edited": {
            "type": "boolean",
            "copy_to": "user_edited"
          },
          "_created": {
            "type": "date",
            "copy_to": "created"
          },
          "_updated": {
            "type": "date",
            "copy_to": "updated"
          },
          "created": {
            "type": "date"
          },
          "workflows": {
            "type": "object",
            "enabled": "false"
          }
        }
      }
    }
  },
  "deposit_options": {
    "ui:object": "tabView",
    "ui:options": {
      "full": true,
      "view": {
        "vertical": true,
        "sidebarColor": "grey-5-a"
      }
    },
    "ui:order": [
      "basic_info",
      "glance_info",
      "input_datasets",
      "workflows",
      "likelihoods",
      "limits",
      "*"
    ],
    "input_datasets": {
      "ui:array": "default",
      "ui:options": {
        "enableArrayUtils": true
      }
    },
    "publications": {
      "ui:array": "default"
    },
    "basic_info": {
      "ui:order": ["analysis_title", "glance_id", "abstract", "people_info"],
      "people_info": {
        "items": {
          "name": {
            "ui:options": {
              "autofill_from": "/api/services/orcid?name=",
              "autofill_fields": [
                [["orcid"], ["basic_info", "people_info", "#", "orcid"]]
              ]
            }
          }
        }
      },
      "glance_id": {
        "ui:options": {
          "autofill_from": "/api/atlas/glance/",
          "autofill_fields": [
            [["pub_short_title"], ["basic_info", "analysis_title"]],
            [["id"], ["glance_info", "id"]],
            [["short_title"], ["glance_info", "short_title"]],
            [["full_title"], ["glance_info", "full_title"]],
            [["pub_short_title"], ["glance_info", "pub_short_title"]],
            [["ref_code"], ["glance_info", "ref_code"]],
            [["creation_date"], ["glance_info", "creation_date"]],
            [["status"], ["glance_info", "status"]],
            [["phase_0"], ["glance_info", "phase_0"]],
            [["gitlab_group"], ["glance_info", "gitlab_group"]]
          ]
        }
      }
    },
    "glance_info": {
      "id": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "short_title": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "full_title": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "pub_short_title": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "ref_code": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "creation_date": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "status": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "phase_0": {
        "ui:readonly": true,
        "ui:options": {
          "parent": "GLANCE ID"
        }
      },
      "ui:order": [
        "id",
        "short_title",
        "full_title",
        "pub_short_title",
        "ref_code",
        "creation_date",
        "status",
        "phase_0",
        "gitlab_group"
      ],
      "gitlab_group": {
        "ui:readonly": true,
        "projects": {
          "ui:title": "Projects"
        }
      }
    },
    "workflows": {
      "ui:array": "default",
      "items": {
        "ui:order": ["workflow_title", "*"],
        "workflow": {
          "ui:title": "Workflow",
          "ui:field": "jsoneditor"
        }
      }
    },
    "likelihoods": {
      "ui:options": { "hidden": true },
      "channels": {
        "ui:array": "AccordionArrayField"
      },
      "parameters": {
        "ui:array": "AccordionArrayField"
      }
    }
  }
}
