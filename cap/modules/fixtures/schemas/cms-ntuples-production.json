{
  "experiment": "CMS",
  "use_deposit_as_record": true,
  "version": "0.0.1",
  "is_indexed": false,
  "fullname": "",
  "deposit_schema": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "required": ["code_base", "processing_steps"],
    "type": "object",
    "properties": {
      "code_base": {
        "x-cap-file": {},
        "type": "string",
        "title": "Your Code"
      },
      "processing_steps": {
        "items": {
          "type": "object",
          "properties": {
            "configuration_file": {
              "x-cap-file": {},
              "type": "string",
              "placeholder": "E.g. my_job_config.py",
              "title": "Configuration File"
            },
            "output_data": {
              "x-cap-file": {},
              "type": "string",
              "placeholder": "E.g. myfile-data.root",
              "title": "Output"
            },
            "run_instructions": {
              "x-cap-file": {},
              "type": "string",
              "placeholder": "E.g. README.md",
              "description": "Provide run instructions",
              "title": "Run Instructions"
            }
          },
          "title": "Step"
        },
        "required": ["configuration_file", "run_instructions", "output_data"],
        "type": "array",
        "title": "Processing Steps"
      }
    }
  },
  "name": "cms-ntuples-production"
}
