{
  "experiment": "CMS",
  "use_deposit_as_record": true,
  "version": "0.0.1",
  "is_indexed": false,
  "fullname": "",
  "deposit_schema": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Information concerning the Monte Carlo Signal Dataset used",
    "properties": {
      "dataset_metadata": {
        "type": "object",
        "properties": {
          "other_ids": {
            "type": "number",
            "description": "Provide dataset ID e.g. 1853590",
            "title": "Dataset ID"
          },
          "run_number": {
            "type": "number",
            "description": "e.g. 146242",
            "title": "Run #"
          },
          "description": {
            "format": "textarea",
            "type": "string",
            "description": "Provide a description for the MC dataset",
            "title": "Description"
          },
          "date_modified": {
            "hidden": "true",
            "format": "datetime",
            "type": "string",
            "title": "Modified"
          },
          "persistent_identifiers": {
            "items": {
              "$ref":
                "https://analysispreservation.cern.ch/schemas/deposits/records/identifiers-v0.0.1.json"
            },
            "type": "array",
            "description": "",
            "title": "Persistent Identifiers"
          },
          "date_available": {
            "type": "number",
            "description":
              "Provide the year the MC dataset will be available in public. e.g. 2014",
            "title": "Year Available"
          },
          "date_issued": {
            "format": "datetime",
            "type": "string",
            "description": "Provide date/time the dataset was issued",
            "title": "Issued"
          },
          "numbers": {
            "description": "Numbers concerning various stuff",
            "type": "object",
            "properties": {
              "files": {
                "type": "number",
                "title": "Number of files"
              },
              "blocks": {
                "type": "number",
                "title": "Number of blocks"
              },
              "events": {
                "type": "number",
                "title": "Numbers of events"
              },
              "extend": {
                "type": "number",
                "title": "Extend"
              },
              "lumis": {
                "type": "number",
                "title": "Number of lumis"
              }
            },
            "title": "Numbers"
          },
          "licence": {
            "type": "string",
            "description": "e.g. CC0 waiver",
            "title": "Licence"
          },
          "type": {
            "type": "string",
            "description": "Provide type of item e.g. 'mc'",
            "title": "Type"
          },
          "dataset_title": {
            "autocomplete": true,
            "propertyOrder": 301,
            "type": "string",
            "description": "e.g. /Mu/Run2010B-Apr21ReReco-v1/AOD",
            "title": "Title"
          }
        }
      },
      "mc_signal_selection": {
        "items": {
          "type": "object",
          "properties": {
            "bin": {
              "type": "object",
              "properties": {
                "pt_hat": {
                  "type": "string",
                  "title": "pt_hat"
                },
                "events": {
                  "type": "string",
                  "title": "Number of Events"
                }
              },
              "title": "Bin"
            },
            "decay_engine": {
              "enum": ["need", "more", "information"],
              "type": "string",
              "title": "Decay Engine"
            },
            "pT": {
              "type": "string",
              "title": "PT"
            },
            "signal": {
              "type": "string",
              "title": "Signal"
            },
            "decay_channel": {
              "type": "string",
              "title": "Decay Channel"
            },
            "generator_tune": {
              "type": "object",
              "properties": {
                "tune": {
                  "enum": ["need", "more", "information"],
                  "type": "string"
                },
                "generator": {
                  "enum": ["need", "more", "information"],
                  "type": "string"
                }
              },
              "title": "Generator and Tune"
            },
            "additional_info": {
              "type": "string",
              "title": "Additional Information"
            },
            "rapidity": {
              "enum": ["Rapidity", "Pseudorapidity"],
              "title": "Rapidity"
            }
          }
        },
        "type": "array",
        "title": "MC Signal"
      },
      "mc_signal_cross_section": {
        "required": "true",
        "type": "number",
        "title": "Cross Section"
      }
    },
    "title": "Monte Carlo Signal Dataset"
  },
  "name": "monte-carlo-signal-dataset"
}
