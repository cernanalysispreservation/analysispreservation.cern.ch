{
  "experiment": "CMS",
  "use_deposit_as_record": true,
  "version": "0.0.1",
  "is_indexed": false,
  "fullname": "",
  "deposit_schema": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Information concerning the CMS Primary Dataset used",
    "properties": {
      "dataset_metadata": {
        "type": "object",
        "properties": {
          "other_ids": {
            "type": "number",
            "description": "Provide dataset ID e.g. 1853590",
            "title": "Dataset ID"
          },
          "run_number": {
            "type": "number",
            "description": "e.g. 146242",
            "title": "Run #"
          },
          "description": {
            "format": "textarea",
            "type": "string",
            "description": "Provide a description for the primary dataset",
            "title": "Description"
          },
          "date_modified": {
            "hidden": "true",
            "format": "datetime",
            "type": "string",
            "title": "Modified"
          },
          "persistent_identifiers": {
            "items": {
              "$ref":
                "https://analysispreservation.cern.ch/schemas/deposits/records/identifiers-v0.0.1.json"
            },
            "type": "array",
            "description": "",
            "title": "Persistent Identifiers"
          },
          "date_available": {
            "type": "number",
            "description":
              "Provide the year the primary dataset will be available in public. e.g. 2014",
            "title": "Year Availble"
          },
          "date_issued": {
            "format": "datetime",
            "type": "string",
            "description": "Provide date/time the primary dataset was issued",
            "title": "Issued"
          },
          "numbers": {
            "description": "Numbers concerning various stuff",
            "type": "object",
            "properties": {
              "files": {
                "type": "number",
                "title": "Number of files"
              },
              "blocks": {
                "type": "number",
                "title": "Number of blocks"
              },
              "events": {
                "type": "number",
                "title": "Numbers of events"
              },
              "extend": {
                "type": "number",
                "title": "Extend"
              },
              "lumis": {
                "type": "number",
                "title": "Number of lumis"
              }
            },
            "title": "Numbers"
          },
          "licence": {
            "type": "string",
            "description": "e.g. CC0 waiver",
            "title": "Licence"
          },
          "type": {
            "type": "string",
            "description": "Provide type of item e.g. 'data'",
            "title": "Type"
          },
          "dataset_title": {
            "autocomplete": true,
            "propertyOrder": 201,
            "type": "string",
            "description": "e.g. /Mu/Run2010B-Apr21ReReco-v1/AOD",
            "title": "Title"
          }
        }
      },
      "event_selection": {
        "type": "object",
        "properties": {
          "event_filter": {
            "enum": [],
            "type": "string",
            "title": "Event Filter"
          },
          "custom_event_filter": {
            "dependencies": ["event_filter"],
            "type": "string",
            "title": " "
          },
          "reference": {
            "type": "string",
            "title": "Reference"
          }
        },
        "title": "Event Filter"
      },
      "json_file": {
        "type": "string",
        "title": "json File for Validated Runs"
      },
      "selection_triggers": {
        "items": {
          "id": "trigger",
          "type": "object",
          "properties": {
            "element": {
              "enum": [],
              "type": "string",
              "dependencies": ["run_period"],
              "title": "Element"
            },
            "trigger": {
              "enum": [],
              "type": "string",
              "dependencies": ["run_period", "element"],
              "title": "Trigger"
            },
            "trigger_efficiency": {
              "required": "true",
              "type": "string",
              "title": "Trigger Efficiency"
            },
            "run_period": {
              "enum": [],
              "type": "string",
              "title": "Run Period"
            }
          },
          "title": "Trigger"
        },
        "type": "array",
        "description": "Add triggers here",
        "title": "Selection Triggers"
      }
    },
    "title": "Primary Dataset"
  },
  "name": "primary-dataset"
}
