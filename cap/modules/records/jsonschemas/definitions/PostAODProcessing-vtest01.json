{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Post-AOD Processing",
  "description": "Information about the AOD Processing",
  "type": "object",
  "properties": {
    "input_data": {
      "title": "Input Data Files",
      "description": "Provide Input data",
      "type": "array",
      "default": [{}],
      "items": {
        "type": "object",
        "properties": {
          "filename": {
            "title": "Filename",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "type": "string"
          }
        }
      }
    },
    "os": {
      "title": "OS",
      "description": "Provide OS",
      "type": "array",
      "default": [{}],
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "version": {
            "title": "Version",
            "type": "string"
          }
        }
      }
    },
    "software": {
      "title": "Analysis Software",
      "descritpion": "Provide software descritpion",
      "type": "array",
      "default": [{}],
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "version": {
            "title": "Version",
            "type": "string"
          },
          "global_tag": {
            "title": "Global Tag",
            "type": "string"
          }
        }
      }
    },
    "user_code": {
      "title": "User Code",
      "description": "Provide user code",
      "type": "array",
      "default": [{}],
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "title": "URL",
            "type": "string"
          },
          "tag": {
            "title": "Tag",
            "type": "string"
          },
          "harvest": {
            "title": "Harvest",
            "type": "boolean",
            "required": true,
            "enum": [true, false]
          }
        }
      }
    },
    "run_instructions": {
      "title": "How to Reproduce",
      "description": "Provide run instructions",
      "type": "array",
      "id": "run_instructions",
      "default": [{}],
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "type": "string",
            "enum": ["readme", "makefile", "upload"]
          }
        }
      }
    },
    "output_data": {
      "title": "Output Data",
      "type": "array",
      "default": [{}],
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "title": "URL",
            "type": "string"
          },
          "harvest": {
            "title": "Harvest",
            "type": "boolean",
            "required": true,
            "enum": [true, false]
          }
        }
      }
    },
    "comments": {
      "title": "Comments",
      "type": "string"
    },
    "keywords": {
      "title": "Keywords",
      "type": "string"
    }
  }
}