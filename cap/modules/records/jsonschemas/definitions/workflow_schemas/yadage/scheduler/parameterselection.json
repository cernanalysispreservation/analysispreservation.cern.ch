{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type":"object",
  "additionalProperties": false,
  "patternProperties":{
    "^[A-Za-z0-9_]*$":{
      "oneOf":[
        {"type":"string"},
        {"type":"array"},
        {"type":"number"},
        {
          "type":"object",
          "additionalProperties": false,
          "properties": {
            "stages": {"type":"string"},
            "output": {"type":"string"},
            "unwrap": {"type":"boolean"},
            "flatten":{"type":"boolean"}
          }
        }
      ]
    }
  }
}