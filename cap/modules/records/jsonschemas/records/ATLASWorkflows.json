{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "atlas_analyis",
	"title": "ATLAS Analysis",
	"type": "object",
	"properties": {
		"basic_info": {
			"type": "object",
			"title": "Basic Info",
			"properties": {
				"title": {
					"title": "Analysis Title",
					"type": "string"
				}
			}
		},
		"workflows": {
			"type": "array",
			"title": "Workflows",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"workflow": {
						"type": "object",
            "oneOf":[{
							"$ref": "../definitions/workflow_schemas/yadage/workflow-schema.json"
            }]
					}
				}
			}
		}
	},
	"required": [
		"workflows"
	]
}