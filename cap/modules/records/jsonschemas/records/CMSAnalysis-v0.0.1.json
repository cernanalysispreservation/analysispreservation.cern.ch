{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CMS Analysis Example (JSON Schema)",
  "description": "Schema example for records Schema example for records Schema example for records Schema example for recordsSchema example for recordsSchema example for records",
  "properties": {
    "basic_info": {
      "title": "Basic Information",
      "description": "Please provide some information relevant for all parts of the Analysis here",
      "propertyOrder": 10,
      "type": "object",
      "id": "basic_info",
      "properties": {
        "analysis_number": {
          "title": "Analysis Number",
          "type": "string"
        },
        "abstract": {
          "title": "Abstract",
          "type": "string"
        },
        "conclusion": {
          "title": "Conclusion",
          "type": "string"
        },
        "people_info": {
          "title": "People Involved",
          "description": "Please provide information about your operation system",
          "type": "object",
          "properties": {
            "names": {
              "title": "Names",
              "type": "string"
            },
            "email": {
              "title": "Email-Adresses",
              "type": "string"
            }
          }
        },
        "os": {
          "title": "Operation System",
          "description": "Please provide information about your operation system",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string"
            },
            "version": {
              "title": "Version",
              "type": "string"
            }
          }
        },
        "software": {
          "title": "Analysis Software",
          "description": "Please provide a software description",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string"
            },
            "version": {
              "title": "Version",
              "type": "string"
            },
            "global_tag_data": {
              "title": "Global Tag Data",
              "type": "string"
            },
            "global_tag_MC": {
              "title": "Global Tag MC",
              "type": "string"
            }
          }
        }
      }
    },
    "input_datasets": {
      "title": "Input Data",
      "description": "Please list all datasets relevant for the Analysis here (including all datasets for all main and auxiliary measurements)",
      "type": "object",
      "id": "input_datasets",
      "properties": {
        "primary_datasets": {
          "title": "Primary Datasets",
          "description": "Please list all primary datasets here",
          "type": "array",
          "id": "primary-datasets",
          "items": {
            "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/PrimaryDataset-v0.0.1.json",
            "properties": {
              "copypaste": {
                "type": "string"
              }
            }
          }
        },
        "mc_sig_dataset": {
          "title": "Monte Carlo Signal Datasets",
          "description": "Please list all Monte Carlo Signal datasets",
          "type": "array",
          "id": "mc_sig_dataset",
          "items": {
            "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/MonteCarloSignalDataset-v0.0.1.json",
            "defaultProperties": [
              "title"
            ]
          }
        },
        "mc_bg_dataset": {
          "title": "Monte Carlo Background Datasets",
          "description": "Please list all Monte Carlo Background datasets",
          "type": "array",
          "id": "mc_bg_dataset",
          "items": {
            "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/MonteCarloBackgroundDataset-v0.0.1.json",
            "defaultProperties": [
              "title"
            ]
          }
        }
      }
    },
    "n-tuple_production_check": {
      "title": "Did you produce n-tuples as an initial step to any measurement?",
      "type": "string",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    },
    "input_code_output": {
      "title": "n-tuple Production",
      "description": "Please provide the n-tuples you used for your measurements",
      "type": "array",
      "default": [{}],
      "items": {
        "type": "object",
        "properties": {
          "code_base": {
            "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSUserCode-v0.0.1.json"
          },
          "n_tuple": {
            "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSInputCodeOutput-v0.0.1.json"
          }
        }
      }
    },
    "main_measurements": {
      "title": "Main Measurement Workflow",
      "description": "Please provide information about the main measurements of your analysis",
      "type": "array",
      "id": "main-measurements",
      "default": [{}],
      "items": {
        "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSMainMeasurements-v0.0.1.json"
      }
    },
    "auxiliary_measurements": {
      "title": "Auxiliary Measurement Workflow",
      "description": "Please provide information about the additional measurements included in your analysis concerning e.g. Trigger Efficiencies, Background Measurements, Systematic Uncertainties, MC Scale Factors, Object Efficiencies, Rates, Acceptance Corrections",
      "type": "array",
      "id": "auxiliary-measurements",
      "items": {
        "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSAuxiliaryMeasurements-v0.0.1.json"
      }
    },
    "post_n_tuple": {
      "title": "Final Results",
      "description": "Please provide information about the combination of measurements for the final results of your analysis ",
      "type": "object",
      "properties": {
        "code_base": {
          "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSUserCode-v0.0.1.json"
        },
        "n_tuple": {
          "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/CMSFinalInputCodeOutput-v0.0.1.json"
        }
      }
    },
    "documentations": {
      "title": "Additional Documentations",
      "description": "Please provide all documentation",
      "type": "array",
      "id": "documentations",
      "default": [{}],
      "items": {
        "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/Documentation-v0.0.1.json"
      }
    },
    "internal_discussions": {
      "title": "Internal Discussions",
      "description": "Please add all internal discussions",
      "type": "array",
      "id": "internal-discussions",
      "default": [{}],
      "items": {
        "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/InternalDiscussion-v0.0.1.json"
      }
    },
    "presentations": {
      "title": "Presentations",
      "description": "Please add all presentations",
      "type": "array",
      "id": "presentations",
      "default": [{}],
      "items": {
        "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/Presentation-v0.0.1.json"
      }
    },
    "publications": {
      "title": "Publications",
      "description": "Please add all publications",
      "type": "array",
      "id": "publications",
      "default": [{}],
      "items": {
        "$ref": "https://analysis-preservation.cern.ch/records/jsonschemas/definitions/Publication-v0.0.1.json"
      }
    },
    "keywords": {
      "title": "Keywords",
      "description": "Please add keywords here",
      "type": "string",
      "id": "keywords"
    }
  },
  "dependencies": {
    "input_code_output": ["n-tuple_production_check"]
  },
  "type": "object"
}
